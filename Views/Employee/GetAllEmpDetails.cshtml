@model IEnumerable<CRUDUsingMVC.Models.EmpModel>

<p>
    @Html.ActionLink("افزودن کارمند جدید", "AddEmployee")
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.Empid)
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>


                @Html.ActionLink("ویرایش", "EditEmpDetails", new { id = item.Empid }) |

                @Html.ActionLink("حذف", "DeleteEmp", new { id = item.Empid },
               new { onclick = "return confirm('آیا از حذف اطمینان دارید؟');" })




            </td>
        </tr>

    }

</table>
